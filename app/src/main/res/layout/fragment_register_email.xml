<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/default_layout_margin"
            android:layout_marginEnd="@dimen/default_layout_margin" >

        <include
                android:id="@+id/layoutEmailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/layout_edit_text"
                app:title="@{`Email`}"
                app:editTextPlaceholder="@{`Email`}"
                app:editTextType="@{`email`}" android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:enabled="false"
                android:alpha="0.5"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="@drawable/shape_rounded_rectangle_yellow"
                android:fontFamily="@font/roboto_condensed_regular"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/layoutEmailEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
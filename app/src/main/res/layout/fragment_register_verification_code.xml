<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_layout_margin">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_verification"
                android:id="@+id/ivPhone" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="@string/we_have_sent_you_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSentWord" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:textSize="@dimen/text_size_very_big" android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_condensed_regular" android:textColor="@color/textColorSecond"
                app:layout_constraintTop_toBottomOf="@+id/ivPhone"/>

        <TextView
                android:text="@string/please_use_passcode_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvUsePasscodeWord" android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/textColorFirst"
                android:fontFamily="@font/roboto_condensed_regular"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tvSentWord" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="6"
                android:maxLength="6"
                android:textSize="@dimen/text_size_verification_code"
                android:textColor="@color/textColorFirst"
                android:letterSpacing="0.55"
                android:background="@android:color/transparent"
                android:id="@+id/etVerificationCode" android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@+id/tvUsePasscodeWord"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
                android:layout_width="235dp"
                android:layout_height="10dp"
                android:background="@drawable/dash_edittext_verification" android:layerType="software"
                android:id="@+id/ivDash" app:layout_constraintTop_toBottomOf="@+id/etVerificationCode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <Button
                android:id="@+id/btnVerify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/verify"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:elevation="10dp"
                android:background="@drawable/shape_rounded_rectangle_gray"
                android:fontFamily="@font/roboto_condensed_regular"
                android:layout_marginTop="36dp"
                android:clickable="false"
                app:layout_constraintTop_toBottomOf="@+id/etVerificationCode" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:text="@string/havent_received_the_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_condensed_regular"
                android:id="@+id/tvWaitSecond" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/btnVerify" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:text="@string/resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondary"
                android:id="@+id/tvResend" android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_condensed_regular"
                app:layout_constraintTop_toBottomOf="@+id/tvWaitSecond" app:layout_constraintEnd_toStartOf="@+id/tvCodeOr"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"/>

        <TextView
                android:text="@string/code_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCodeOr" android:layout_marginStart="4dp"
                android:fontFamily="@font/roboto_condensed_regular"
                app:layout_constraintStart_toEndOf="@+id/tvResend" app:layout_constraintEnd_toStartOf="@+id/tvAnotherVerification"
                app:layout_constraintBaseline_toBaselineOf="@id/tvResend" />

        <TextView
                android:text="@string/another_verification"
                android:layout_width="wrap_content"
                android:textColor="@color/colorSecondary"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="384dp"
                android:id="@+id/tvAnotherVerification" android:layout_marginStart="4dp"
                android:fontFamily="@font/roboto_condensed_regular"
                app:layout_constraintBaseline_toBaselineOf="@id/tvResend"
                app:layout_constraintStart_toEndOf="@+id/tvCodeOr" app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
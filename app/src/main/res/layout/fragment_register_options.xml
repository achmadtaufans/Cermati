<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="@string/mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMobileNumberWord" android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_condensed_regular"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/btnCountryCode"
                android:layout_marginStart="16dp"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:maxLength="14"
                android:ems="10"
                android:id="@+id/etMobileNumber"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/btnCountryCode"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintHorizontal_weight="1"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/gray_400"
                app:layout_constraintTop_toBottomOf="@+id/tvMobileNumberWord"/>

        <TextView
                android:text="Phone number is exist"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvErrorMessage"
                android:textColor="@color/colorRed"
                android:fontFamily="@font/roboto_condensed_regular"
                app:layout_constraintTop_toBottomOf="@+id/etMobileNumber"
                app:layout_constraintStart_toEndOf="@+id/btnCountryCode"
                android:layout_marginStart="16dp"
                android:visibility="gone"/>

        <Button
                android:id="@+id/btnCountryCode"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="+62"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/textColorFirst"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:drawableLeft="@android:drawable/star_big_on"
                android:background="@color/gray_100"
                android:padding="6dp"
                android:fontFamily="@font/roboto_condensed_regular"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvMobileNumberWord" app:layout_constraintEnd_toStartOf="@+id/etMobileNumber" />

        <Button
                android:id="@+id/btnRegisterPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:enabled="false"
                android:alpha="0.5"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="@drawable/shape_rounded_rectangle_yellow"
                android:fontFamily="@font/roboto_condensed_regular"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/btnCountryCode" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:onClick="onClick"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/btnRegisterPhone"
                android:layout_marginTop="46dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/gray_100" app:layout_constraintBottom_toBottomOf="parent" >

            <TextView
                    android:text="@string/or_register_with"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:id="@+id/tvRegisterWith" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnRegisterEmail"
                    android:drawableLeft="@drawable/ic_loreg_email"
                    android:paddingLeft="16dp"
                    android:textAllCaps="false"
                    android:text="Email"
                    android:paddingRight="40dp"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:textSize="@dimen/text_size_big"
                    android:background="@drawable/shape_rounded_rectangle_white"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/tvRegisterWith"
                    android:layout_marginTop="14dp"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnRegisterGoogle"
                    android:drawableLeft="@drawable/ic_loreg_google"
                    android:paddingLeft="16dp"
                    android:textAllCaps="false"
                    android:text="Google"
                    android:paddingRight="40dp"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:textSize="@dimen/text_size_big"
                    android:background="@drawable/shape_rounded_rectangle_white"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnRegisterEmail" />

            <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnRegisterFacebook"
                    android:drawableLeft="@drawable/ic_loreg_facebook"
                    android:paddingLeft="16dp"
                    android:textAllCaps="false"
                    android:text="Facebook"
                    android:paddingRight="40dp"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:textSize="@dimen/text_size_big"
                    android:background="@drawable/shape_rounded_rectangle_white"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnRegisterGoogle" />

            <TextView
                    android:text="@string/dont_have_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDontHaveAccount"
                    android:textColor="@color/textColorSecond"
                    android:textSize="@dimen/text_size_small"
                    android:fontFamily="@font/roboto_condensed_regular"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintTop_toBottomOf="@+id/btnRegisterFacebook" android:layout_marginTop="18dp"
                    app:layout_constraintEnd_toStartOf="@+id/tvLogin" app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:text="@string/login"
                    android:textColor="@color/colorSecondary"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLogin"
                    app:layout_constraintStart_toEndOf="@+id/tvDontHaveAccount"
                    android:fontFamily="@font/roboto_condensed_regular" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/btnRegisterFacebook"
                    android:layout_marginTop="18dp" android:layout_marginStart="4dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <import type="android.view.View" />
        <variable name="title" type="java.lang.String" />
        <variable name="editTextPlaceholder" type="java.lang.String" />
        <variable name="editTextType" type="java.lang.String" />
        <variable name="errorMessage" type="java.lang.String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{title}"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/textColorSecond"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:id="@+id/tvTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_big"
                android:textColor="@color/textColorFirst"
                android:hint="@{editTextPlaceholder}"
                app:editTextType="@{editTextType}"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_marginTop="4dp"
                android:backgroundTint="@color/gray_400"
                android:fontFamily="@font/roboto_condensed_regular"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" />

        <TextView
                android:text="@{errorMessage}"
                android:visibility="@{errorMessage.length() > 0 ? View.VISIBLE : View.INVISIBLE }"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvErrorMessage"
                android:fontFamily="@font/roboto_condensed_regular"
                app:layout_constraintTop_toBottomOf="@+id/editText"
                app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>